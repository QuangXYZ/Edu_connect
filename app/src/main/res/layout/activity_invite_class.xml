<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.InviteClassActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/invite_class_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Tạo lớp học mới"
            app:titleTextColor="@color/white"
            android:background="@color/lavender"
            app:navigationIcon="@drawable/baseline_arrow_back_24_white"
            app:titleCentered="true"
            android:elevation="5dp"
            />
    </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/invite_class_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nhập mã lớp học"
                android:inputType="text"
                android:padding="8dp"
                android:maxLines="1"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/invite_class_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Tham gia"
            android:textSize="18sp"
            android:backgroundTint="@color/lavender"
            app:cornerRadius="20dp"

            />

</LinearLayout>
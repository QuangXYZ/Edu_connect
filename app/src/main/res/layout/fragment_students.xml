<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Fragment.StudentsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Học viên"
        android:textSize="20sp"
        android:textColor="@color/Orange"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_student_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:listitem="@layout/single_card_student"/>
    <TextView
        android:id="@+id/fragment_student_no_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có học viên"
        android:textColor="@color/gray"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:visibility="gone"
        android:textSize="14sp"/>

</LinearLayout>